# ============================
# Android / IntelliJ .gitignore
# ============================

# Gradle
.gradle/
build/
**/build/

# Local configuration file (SDK path, etc)
local.properties

# Signing files (never commit)
*.keystore
*.jks
*.keystore.properties

# Google Services (only ignore if you use service accounts)
# google-services.json

# Android Studio / IntelliJ
.idea/*
!.idea/misc.xml
!.idea/vcs.xml
!.idea/codeStyles/
!.idea/runConfigurations/

# Files to ignore inside .idea
.idea/workspace.xml
.idea/tasks.xml
.idea/usage.statistics.xml
.idea/dictionaries/
.idea/shelf/
.idea/assetWizardSettings.xml
.idea/deploymentTargetDropDown.xml
.idea/caches/
.idea/libraries/
.idea/modules.xml
.idea/gradle.xml

# Auto-generated iml files
*.iml

# MacOS
.DS_Store

# Windows
Thumbs.db

# Logs
*.log

# Gradle caches
.gradle/
